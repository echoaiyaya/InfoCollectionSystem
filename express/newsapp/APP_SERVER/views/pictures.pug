extends layout
block content
  .container-fluid.header-css(role='banner')
    .row
      header.col-xl-2.offset-xl-1.col-lg-3.col-md-3.col-sm-12.col-9
        h3 Grobal News
      .col-3.nav-btn
        button#navBtn.btn(type='button')
          // <span class="nav-icon"></span>
          img(alt='button' src="data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(0, 0, 0, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e")
      nav#navList.col-xl-5.col-lg-6.col-md-9.col-sm-12.nav-bar(role='navigation')
        ul.nav
          li.nav-item
            a(href='http://localhost:3000') Home
          li.nav-item
            a(href='http://localhost:3000/news') News
          li.nav-item
            a(href='http://localhost:3000/videos') Videos
          li.nav-item.active
            a(href='http://localhost:3000/pictures') Images
          li.nav-item
            a(href='graphs.html') Graphs
          li.nav-item
            a(href='aboutUs.html') About Us
          li.nav-item
            a(href='search.html') Search
      .search-bar.col-xl-3.col-lg-3(role='search')
        input(type='text' placeholder='Grobal News')
        a(href='#')
          img(src='../images/search.png' alt='search button')
  main.container-fluid.news-main(role='main')
  .row
    .col-lg-7.offset-lg-1.col-md-8
    .album.py-5.bg-light
      .container
        .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
          each pictures in list 
            .pictures-list.container-fluid
              .row
                img.col-sm-4(alt='News picture'  href='pictures.title' src=pictures.picture width='auto' height= '100' )
                .col-sm-8
                  a.pictures-list-title(href='pictures/' + pictures._id)
                    h4 #{pictures.title}
                  p
                    | !{pictures.intro}
                    br
                    | Key: 
                    span.key-word USA
                  .pictures-bottom
                    span.author
                        | By 
                        a(href='#') #{pictures.author}
                    span.date #{pictures.publicTimeString}  
                       