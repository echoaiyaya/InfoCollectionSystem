extends layout

block content
  .container-fluid.header-css(role='banner')
    .row
      header.col-xl-2.offset-xl-1.col-lg-3.col-md-3.col-sm-12.col-9
        h3 Grobal News
      .col-3.nav-btn
        button#navBtn.btn(type='button')
          // <span class="nav-icon"></span>
          img(alt='button' src="data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(0, 0, 0, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e")
      nav#navList.col-xl-5.col-lg-6.col-md-9.col-sm-12.nav-bar(role='navigation')
        ul.nav
          li.nav-item.active
            a(href='/') Home
          li.nav-item
            a(href='/news/list') News
          li.nav-item
            a(href='/videos/list') Videos
          li.nav-item
            a(href='/pictures/list') Images
          li.nav-item
            a(href='/aboutus') About Us
          li.nav-item
            a(href='/submitDonation') Donate
      .search-bar.col-xl-3.col-lg-3(role='search')
        input#searchId(type='text' placeholder='Grobal News')
        a(onclick="toSearch();")
          img(src='../images/search.png' alt='search button')
  main.container-fluid(role='main')
  .row
    section.col-xl-12.container-fluid
      .row.top-news
        img.col-xl-12(src=scrollNews.picture alt='news picture')
        .top-news-card.col-md-10.offset-md-1
          a(href="/news/detail/"+ scrollNews._id)
            h1= scrollNews.title
            p
              | !{scrollNews.intro}
    section.col-md-10.offset-md-1.container-fluid.mtop
      .row
        .col-lg-4
          h2.section-title Headlines
          hr
          ul.list-inline.headline-list
            each hnews in headLineNews
              li.list-inline
                a(href="/news/detail/"+ hnews._id)
                  | #{hnews.title}
            
        .col-lg-8.container-fluid
          h2.section-title Speical News
          hr
          .row
            each snews in speicalNews
              a.col-lg-6.col-sm-6(href="/news/detail/"+ snews._id)
                .card.top-card
                  img.card-img-top(src=snews.picture alt=snews.title)
                  .card-body
                    h5.card-title
                      | #{snews.title}
    section.col-md-10.offset-md-1.container-fluid.mtop.index-video-list
      h2.section-title News
      hr
      .row
        each cnews in subNews
          .col-lg-3.col-sm-6
            h3= cnews.title
            hr
            ul.list-inline.headline-list
              each subnews, index in cnews.content
                if index == 0
                  li.list-inline
                    a(href="/news/detail/"+ subnews._id)
                      img.homepagenews.w-100(src=subnews.picture, alt=subnews.title)
                      | #{subnews.title.substr(0, 50) + ' ...'}
                else
                  li.list-inline
                    a(href="/news/detail/"+ subnews._id)
                      | #{subnews.title.substr(0, 50) + ' ...'}
    section.col-md-10.offset-md-1.container-fluid.mtop.index-video-list
      h2.section-title Latest Pictures
      hr
      .row
        each getpic in getPictures
          .col-lg-3.col-sm-6
            ul.list-inline.headline-list
              li.list-inline
                a(href="/pictures/detail/" + getpic._id)
                  img.homepagenews.w-100(src=getpic.picture, alt=getpic.title)
                  | #{getpic.title}
    section.col-md-10.offset-md-1.container-fluid.mtop.index-video-list
      h2.section-title Latest Videos
      hr
      .row
        each getv in getVideos
          .col-lg-6.col-sm-6
            ul.list-inline.headline-list
              li.list-inline
                a(href="/videos/detail/" + getv._id)
                  | !{getv.picture}
                  p #{getv.title}

  
